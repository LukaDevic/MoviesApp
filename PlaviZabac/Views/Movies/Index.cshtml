@model IEnumerable<Film>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Filmovi</h1>

<p>
    <a asp-controller="Movies" asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-controller="Movies" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="SearchString">
        Date: <input type="date" name="MaxReleaseDate">
        <input type="submit" value="Filter" />
    </p>
</form>



<table class="table table-bordered table-hover">
    <tr>
        <th>Ime</th>
        <th>Zanr</th>
        <th>Datum Objave</th>
        <th>Kolicina na stanju</th>
        <th>Prodavnica</th>
        <th></th>
    </tr>
    @foreach (var movie in Model)
    {
<tr>
    <td>@movie.Ime</td>
    <td>@movie.Zanr.Ime</td>
    <td>@movie.DatumObjave.ToShortDateString()</td>
    <td>@movie.BrojNaStanju</td>
    <td>@movie.Prodavnica.Ime</td>
    <td>
        <a asp-controller="Movies" asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-warning">Edit</a>
        <a asp-controller="Movies" asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-danger">Delete</a>
    </td>
</tr>
    }
</table>